---
import SocialBest from "@components/social/SocialBest.astro";
import Hero from "@components/sections/Hero.astro";
import Layout from "@layouts/Layout.astro";
import Reviews from "@components/sections/Reviews.astro";
import PricingPlan from "@components/sections/PricingPlan.astro";
import TrustMetrics from "@components/sections/TrustMetrics.astro";
import Gallery from "@components/sections/Gallery.astro";
import SectionContainer from "@components/layout/SectionContainer.astro";
import ScheduleSection from "@components/sections/ScheduleSection.astro";
import ServiceBento from "@components/services/ServiceBento.astro";
import MobileBottomNav from "@components/layout/MobileBottomNav.tsx";

// Horarios del gimnasio
const schedule = [
  { days: "Lunes a Viernes", hours: "5:00 AM - 10:00 PM" },
  { days: "Sábado", hours: "6:00 AM - 5:00 PM" },
  { days: "Domingo", hours: "12:00 PM - 4:00 PM" },
];

// Configuración de navegación móvil
const mobileNavItems = [
  {
    id: "servicios",
    label: "Servicios",
    href: "/#servicios",
    icon: "grid" as const,
  },
  {
    id: "precios",
    label: "Precios",
    href: "#precios",
    icon: "tag" as const,
  },
  {
    id: "promociones",
    label: "Promociones",
    href: "/promociones",
    icon: "clock" as const,
  },
  {
    id: "galeria",
    label: "Galería",
    href: "#galeria",
    icon: "image" as const,
  },
  {
    id: "contacto",
    label: "Contacto",
    href: "/contacto",
    icon: "star" as const,
  },
];
---

<Layout
  title="Gym Trasciende | Supera tus límites"
  description="¿Buscas gimnasio en Ocotlán? En Trasciende Gym te ofrecemos pesas, spinning y nutrición para todo nivel. Abierto desde las 5 am. ¡Empieza tu cambio hoy!"
>
  <Hero />

  <ServiceBento />
  <TrustMetrics />
  <PricingPlan />
  <SectionContainer class="py-16 md:py-20">
    <div class="mx-auto max-w-2xl">
      <ScheduleSection schedule={schedule} />
    </div>
  </SectionContainer>
  <Reviews />
  <Gallery />
  <SocialBest />

  {/* Navegación móvil inferior */}
  <MobileBottomNav
    client:load
    items={mobileNavItems}
    hideOnScroll={false}
    vibration={true}
  />
</Layout>
