---
/**
 * Links Page - Estilo Linktree para Gym Trasciende
 * Optimizado para rendimiento con Astro 5 SSG y SEO Local
 * Página de contacto optimizada para búsquedas: "contacto gym trasciende", "gimnasio ocotlán"
 */

import Layout from "@layouts/Layout.astro";
import Facebook from "@components/icons/Facebook.astro";
import Instagram from "@components/icons/Instagram.astro";
import Tiktok from "@components/icons/Tiktok.astro";
import ScheduleSection from "@components/sections/ScheduleSection.astro";
import Gallery from "@components/sections/Gallery.astro";
import Location from "@components/sections/Location.astro";
import MobileBottomNav from "@components/layout/MobileBottomNav.tsx";
import PricingPlan from "@components/sections/PricingPlan.astro";

// Enlaces de redes sociales y contacto
// IMPORTANTE: Actualiza el número de WhatsApp con tu número real (formato: 52 + código de área + número)
const socialLinks = [
  {
    name: "Instagram",
    url: "https://www.instagram.com/trasciendegym?igsh=MmJxaHRjM2w2cG1p",
    icon: Instagram,
    color: "from-primary to-accent",
  },
  {
    name: "Facebook",
    url: "https://www.facebook.com/profile.php?id=61583792785523",
    icon: Facebook,
    color: "from-blue-600 to-blue-500",
  },
  {
    name: "TikTok",
    url: "https://www.tiktok.com/@trasciende.gym",
    icon: Tiktok,
    color: "from-black via-[#ff0050] to-[#00f2ea]",
  },
  {
    name: "WhatsApp",
    url: "https://wa.me/529514980492?text=Hola,%20quiero%20información%20sobre%20Gym%20Trasciende",
    icon: null,
    color: "from-green-600 to-green-500",
    whatsapp: true,
    special: true,
  },
];

// Horarios del gimnasio
const schedule = [
  { days: "Lunes a Viernes", hours: "5:00 AM - 10:00 PM" },
  { days: "Sábado", hours: "6:30 AM - 5:00 PM" },
  { days: "Domingo", hours: "12:00 PM - 4:00 PM" },
];

// Configuración de navegación móvil
const mobileNavItems = [
  {
    id: "servicios",
    label: "Servicios",
    href: "/servicios",
    icon: "grid" as const,
  },
  {
    id: "precios",
    label: "Precios",
    href: "#precios",
    icon: "tag" as const,
  },
  {
    id: "promociones",
    label: "Promociones",
    href: "/promociones",
    icon: "clock" as const,
  },
  {
    id: "galeria",
    label: "Galería",
    href: "#galeria",
    icon: "image" as const,
  },
  {
    id: "contacto",
    label: "Contacto",
    href: "/contacto",
    icon: "star" as const,
  },
];
---

<Layout
  title="Contacto y Horarios | Gym Trasciende - Ocotlán de Morelos"
  description="¿Tienes dudas? Contacta a Trasciende Gym en Ocotlán de Morelos. Ubicación, horarios desde las 5 am y atención personalizada. ¡Visítanos y aclara tus dudas!"
>
  <!-- Meta Keywords para SEO -->
  <meta
    slot="head"
    name="keywords"
    content="gym trasciende, gimnasio ocotlan, gym ocotlan de morelos, fitness ocotlan, entrenamiento personalizado oaxaca, horarios gym trasciende, ubicacion gym trasciende"
  />

  <!-- Canonical URL -->
  <link slot="head" rel="canonical" href="https://trasciendegym.com/contacto" />

  <!-- Datos Estructurados JSON-LD para SEO Local -->
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ExerciseGym",
      name: "Gym Trasciende",
      description:
        "Centro de fitness y entrenamiento en Ocotlán de Morelos, Oaxaca. Transformación física segura y sostenible.",
      image: "https://trasciendegym.com/logo.jpg",
      url: "https://trasciendegym.com/contacto",
      telephone: "+52-951-498-0492",
      address: {
        "@type": "PostalAddress",
        streetAddress: "Guillermo Prieto Sur 45",
        addressLocality: "Ocotlán de Morelos",
        addressRegion: "Oaxaca",
        addressCountry: "MX",
      },
      geo: {
        "@type": "GeoCoordinates",
        latitude: 16.7951,
        longitude: -96.6737,
      },
      openingHoursSpecification: [
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          opens: "06:00",
          closes: "22:00",
        },
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: "Saturday",
          opens: "07:30",
          closes: "17:00",
        },
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: "Sunday",
          opens: "12:00",
          closes: "16:00",
        },
      ],
      sameAs: [
        "https://www.tiktok.com/@trasciende.gym",
        "https://www.instagram.com/trasciendegym",
        "https://www.facebook.com/profile.php?id=61583792785523",
      ],
      priceRange: "$$",
    })}
  />

  <!-- FAQPage Schema para mejorar aparición en búsquedas de preguntas -->
  <script
    type="application/ld+json"
    slot="head"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "¿Cuáles son los horarios de Gym Trasciende?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Lunes a Viernes: 6:00 AM - 10:00 PM. Sábado: 7:30 AM - 5:00 PM. Domingo: 12:00 PM - 4:00 PM.",
          },
        },
        {
          "@type": "Question",
          name: "¿Dónde está ubicado Gym Trasciende?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Estamos ubicados en Guillermo Prieto Sur 45, Ocotlán de Morelos, Oaxaca.",
          },
        },
        {
          "@type": "Question",
          name: "¿Cómo puedo contactar a Gym Trasciende?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Puedes contactarnos por WhatsApp, Instagram (@trasciendegym), Facebook, TikTok (@trasciende.gym) o visitarnos en nuestras instalaciones.",
          },
        },
      ],
    })}
  />

  <main class="bg-background min-h-screen px-4 py-20 sm:px-6 sm:py-24 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <!-- Header con Logo y Título -->
      <header class="mb-12 text-center">
        <div class="mb-6 flex justify-center">
          <div
            class="border-primary shadow-primary/20 ring-primary/10 relative h-28 w-28 overflow-hidden rounded-full border-2 shadow-lg ring-2"
          >
            <img
              src="/logo.jpg"
              alt="Logo de Gym Trasciende - Centro de Fitness en Ocotlán de Morelos, Oaxaca"
              class="h-full w-full object-cover"
              loading="eager"
            />
            <div
              class="from-primary/20 absolute inset-0 animate-pulse bg-linear-to-tr to-transparent"
            >
            </div>
          </div>
        </div>

        <h1 class="mb-2 text-4xl font-bold text-white sm:text-5xl">
          Trasciende Gym
        </h1>
        <p class="text-lg text-gray-400">
          Ocotlán de Morelos, Oaxaca | Contáctanos por redes sociales
        </p>
      </header>

      <!-- Enlaces Sociales -->
      <section class="mb-12 space-y-4" aria-label="Enlaces de redes sociales">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              target={link.url.startsWith("http") ? "_blank" : undefined}
              rel={
                link.url.startsWith("http") ? "noopener noreferrer" : undefined
              }
              aria-label={
                link.whatsapp
                  ? `Contactar por WhatsApp a Gym Trasciende - Se abre en una nueva ventana`
                  : `Visitar ${link.name} de Gym Trasciende${link.name === "Sitio Web" ? "" : " - Se abre en una nueva ventana"}`
              }
              class:list={[
                "link-button group relative block w-full overflow-hidden rounded-2xl backdrop-blur-md transition-all duration-300",
                "border-primary/30 border bg-white/5 p-5",
                "hover:border-primary hover:shadow-primary/30 hover:scale-[1.02] hover:bg-white/10 hover:shadow-lg",
                "focus:ring-primary focus:ring-offset-background focus:ring-2 focus:ring-offset-2 focus:outline-none",
                "active:scale-[0.98]",
                link.special && "border-primary/60 bg-primary/10",
              ]}
            >
              {/* Gradiente de fondo animado */}
              <div
                class:list={[
                  "absolute inset-0 bg-linear-to-r opacity-0 transition-opacity duration-300 group-hover:opacity-10",
                  link.color,
                ]}
              />

              <div class="relative flex items-center justify-between">
                <div class="flex items-center gap-4">
                  {link.icon && (
                    <div class="group-hover:bg-primary/20 flex h-12 w-12 items-center justify-center rounded-xl bg-white/5 backdrop-blur-sm transition-transform duration-300 group-hover:scale-110">
                      <link.icon class="text-primary h-6 w-6 transition-colors group-hover:text-white" />
                    </div>
                  )}
                  {link.whatsapp && (
                    <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-green-500/20 backdrop-blur-sm transition-transform duration-300 group-hover:scale-110 group-hover:bg-green-500/30">
                      <svg
                        class="h-7 w-7 text-green-400 transition-colors group-hover:text-white"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                      >
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                      </svg>
                    </div>
                  )}
                  <span
                    class:list={[
                      "text-xl font-semibold transition-colors",
                      link.special ? "text-primary" : "text-white",
                      "group-hover:text-primary",
                      link.whatsapp && "text-green-400 group-hover:text-white",
                    ]}
                  >
                    {link.name}
                  </span>
                </div>

                {/* Flecha indicadora */}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="group-hover:text-primary h-6 w-6 text-gray-400 transition-all duration-300 group-hover:translate-x-1"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"
                  />
                </svg>
              </div>
            </a>
          ))
        }
      </section>

      <!-- Horarios -->
      <ScheduleSection schedule={schedule} />

      <!-- Ubicación -->
      <Location />
    </div>
  </main>

  <PricingPlan />

  <Gallery />

  {/* Navegación móvil inferior */}
  <MobileBottomNav
    client:load
    items={mobileNavItems}
    hideOnScroll={false}
    vibration={true}
  />
</Layout>

<style>
  /* Animación sutil para el logo */
  @keyframes pulse-subtle {
    0%,
    100% {
      opacity: 0.2;
    }
    50% {
      opacity: 0.3;
    }
  }

  .animate-pulse {
    animation: pulse-subtle 3s ease-in-out infinite;
  }

  /* Mejora de rendimiento */
  .link-button {
    will-change: transform;
    transform: translateZ(0);
  }

  /* Scroll suave */
  html {
    scroll-behavior: smooth;
  }
</style>
