---
import "../styles/global.css";
import "@fontsource-variable/montserrat";
import { ClientRouter } from "astro:transitions";

import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string;
  author?: string;
  type?: "website" | "article";
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title = "Gym Trasciende | Supera tus límites",
  description = "¿Buscas gym en Ocotlán? En Trasciende Gym te ofrecemos pesas, spinning y nutrición para todo nivel. Abierto desde las 5 am. ¡Empieza tu cambio hoy!",
  image = "https://trasciendegym.com/logo.jpg",
  keywords = "gym ocotlan, gimnasio en ocotlan, fitness ocotlan, gym trasciende, gimnasio oaxaca, clases fitness ocotlan, entrenador personal ocotlan",
  author = "Gym Trasciende",
  type = "website",
  publishedTime,
  modifiedTime,
} = Astro.props;

const siteUrl = "https://trasciendegym.com";
const canonicalURL = new URL(Astro.url.pathname, siteUrl).href;

// Schema.org JSON-LD para SEO (optimizado y minificado)
// Solo se incluye en páginas principales para mejor performance
const includeSchema =
  Astro.url.pathname === "/" ||
  Astro.url.pathname === "/nosotros" ||
  Astro.url.pathname === "/nosotros/";

const schemaOrgWebPage = includeSchema
  ? {
      "@context": "https://schema.org",
      "@type": "ExerciseGym",
      "@id": siteUrl,
      name: "Gym Trasciende",
      description: description,
      url: siteUrl,
      logo: `${siteUrl}/logo.svg`,
      image: image,
      telephone: "+52-951-300-4258",
      address: {
        "@type": "PostalAddress",
        streetAddress: "Guillermo Prieto Sur 45, La Estación",
        addressLocality: "Ocotlán de Morelos",
        addressRegion: "Oaxaca",
        postalCode: "71510",
        addressCountry: "MX",
      },
      areaServed: {
        "@type": "City",
        name: "Ocotlán de Morelos",
      },
      geo: {
        "@type": "GeoCoordinates",
        latitude: 16.79654231603816,
        longitude: -96.67660295253583,
      },
      openingHoursSpecification: [
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          opens: "06:00",
          closes: "22:00",
        },
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: "Saturday",
          opens: "07:00",
          closes: "21:00",
        },
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: "Sunday",
          opens: "08:00",
          closes: "14:00",
        },
      ],
      priceRange: "$$",
      aggregateRating: {
        "@type": "AggregateRating",
        ratingValue: 5.0,
        reviewCount: 150,
      },
      sameAs: [
        "https://www.facebook.com/profile.php?id=61583792785523",
        "https://www.instagram.com/trasciendegym",
        "https://www.tiktok.com/@trasciende.gym",
      ],
    }
  : null;
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Preconnect para optimización de fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#1a2000" />
    <meta name="msapplication-TileColor" content="#1a2000" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content="Gym Trasciende" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Gym Trasciende - Instalaciones" />
    <meta property="og:locale" content="es_MX" />
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:image:alt" content="Gym Trasciende - Instalaciones" />

    <!-- Schema.org JSON-LD (solo en páginas principales para mejor performance) -->
    {
      schemaOrgWebPage && (
        <script
          type="application/ld+json"
          set:html={JSON.stringify(schemaOrgWebPage)}
        />
      )
    }

    <!-- Astro Client Router -->
    <ClientRouter />
  </head>
  <body class="bg-background">
    <Header transition:persist transition:name="header" />
    <slot />
    <Footer />
  </body>
</html>
