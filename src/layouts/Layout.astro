---
import "../styles/global.css";
import "@fontsource-variable/montserrat";

import Header from "@components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />

    <title>Gym Trasciende | Supera tus limites</title>

    <meta name="theme-color" content="#232900" />

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content="Gym Trasciende | Supera tus limites" />
    <meta
      property="og:description"
      content="No solo somos un gimnasio; somos tu socio en la transformación. Nuestra meta principal es que alcances tus objetivos de fitness de la mejor forma posible y sin riesgos. Creemos que el verdadero progreso es sostenible y seguro."
    />
    <meta property="og:image" content="https://tudominio.com/logo.jpg" />
    <meta property="og:url" content="https://tudominio.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Gym Trasciende | Supera tus limites" />
    <meta
      name="twitter:description"
      content="No solo somos un gimnasio; somos tu socio en la transformación. Nuestra meta principal es que alcances tus objetivos de fitness de la mejor forma posible y sin riesgos."
    />
    <meta name="twitter:image" content="https://tudominio.com/logo.jpg" />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
