---
import "../styles/global.css";
import "@fontsource-variable/montserrat";
import { ClientRouter } from "astro:transitions";

import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Gym Trasciende | Supera tus limites",
  description = "No solo somos un gimnasio; somos tu socio en la transformaci√≥n. Nuestra meta principal es que alcances tus objetivos de fitness de la mejor forma posible y sin riesgos. Creemos que el verdadero progreso es sostenible y seguro.",
} = Astro.props;

const image = "https://strong-nasturtium-2ec0f6.netlify.app/logo.jpg";
const url = "https://strong-nasturtium-2ec0f6.netlify.app/";
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <meta name="theme-color" content="#1a2000" />

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <ClientRouter />
  </head>
  <body>
    <Header transition:persist transition:name="header" />
    <slot />
    <Footer />
  </body>
</html>
