---
/**
 * MinimalFeatures - Strip horizontal minimalista con beneficios/características
 * Versión simplificada de ServiceFeatures, enfocada en diseño limpio
 * Ideal para mostrar 4-6 beneficios clave de forma concisa
 */

interface Feature {
  icon: string;
  text: string;
}

interface Props {
  features: Feature[];
  title?: string;
  variant?: "strip" | "grid";
  class?: string;
}

const { features, title, variant = "strip", class: className } = Astro.props;

// Iconos SVG minimalistas
const getIconPath = (iconName: string) => {
  const icons: Record<string, string> = {
    dumbbell:
      "M17.48 6.55l-2.84-2.84a4.5 4.5 0 00-6.36 0L6.5 5.5a4.5 4.5 0 000 6.36l2.84 2.84c.39.39 1.02.39 1.41 0l6.73-6.73c.39-.39.39-1.02 0-1.41z M17 8l-9 9m9-9v4m0-4h-4M8 17h4m-4 0v-4",
    fire: "M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z",
    bone: "M9 2a3 3 0 00-3 3v1a1 1 0 01-1 1H4a3 3 0 000 6h1a1 1 0 011 1v1a3 3 0 006 0v-1a1 1 0 011-1h1a3 3 0 100-6h-1a1 1 0 01-1-1V5a3 3 0 00-3-3z",
    chart:
      "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    heart:
      "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
    shield:
      "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    zap: "M13 10V3L4 14h7v7l9-11h-7z",
    target:
      "M12 8c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 10c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6z M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z",
    users:
      "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
  };
  return icons[iconName] || icons.target;
};
---

<section class:list={["py-12 md:py-16", className]}>
  <div class="mx-auto max-w-7xl px-4">
    {
      title && (
        <h2 class="mb-12 text-center text-3xl font-bold text-white md:text-4xl">
          {title}
        </h2>
      )
    }

    <div
      class:list={[
        "gap-6",
        variant === "strip"
          ? "grid grid-cols-2 md:grid-cols-4"
          : "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
      ]}
    >
      {
        features.map((feature, index) => (
          <div
            class="group hover:border-primary/30 flex flex-col items-center gap-4 rounded-2xl border border-zinc-800/50 bg-zinc-900/30 p-6 text-center backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:bg-zinc-900/50"
            style={`animation-delay: ${index * 75}ms`}
          >
            {/* Icono circular con background */}
            <div class="relative">
              <div class="bg-primary/20 absolute inset-0 rounded-full opacity-0 blur-xl transition-opacity duration-300 group-hover:opacity-100" />
              <div class="border-primary/30 bg-primary/10 relative flex h-16 w-16 items-center justify-center rounded-full border transition-transform duration-300 group-hover:scale-110">
                <svg
                  class="text-primary h-8 w-8"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d={getIconPath(feature.icon)}
                  />
                </svg>
              </div>
            </div>

            {/* Texto */}
            <p class="text-sm leading-snug font-semibold text-zinc-200 md:text-base">
              {feature.text}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
