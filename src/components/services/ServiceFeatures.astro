  return icons[iconName] || icons.star;
};
---

<SectionContainer class:list={["py-16 md:py-20", className]}>
  {title && <h2 class="text-secondary mb-12 text-center text-3xl font-bold md:text-4xl">{title}</h2>}
  
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    {features.map((feature) => (
      <div class="group relative overflow-hidden rounded-xl border border-white/10 bg-gray-900/50 p-6 backdrop-blur-sm transition-all duration-300 hover:border-emerald-500/30 hover:bg-gray-900/70 hover:scale-[1.02]">
        <!-- Icono -->
        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-emerald-500/20 transition-transform duration-300 group-hover:scale-110">
          <svg 
            class="h-6 w-6 text-emerald-400" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d={getIconPath(feature.icon)}
            />
          </svg>
        </div>
        
        <!-- Contenido -->
        <h3 class="mb-2 text-xl font-bold text-white">{feature.title}</h3>
        <p class="text-sm leading-relaxed text-gray-300">{feature.description}</p>
        
        <!-- Efecto hover -->
        <div class="absolute inset-0 rounded-xl opacity-0 transition-opacity duration-300 group-hover:opacity-100" 
             style="background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.05), transparent); pointer-events: none;">
        </div>
      </div>
    ))}
  </div>
</SectionContainer>
