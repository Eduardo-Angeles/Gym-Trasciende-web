---
/**
 * ServiceFeatures - Componente para mostrar características/beneficios de servicios
 * Grid de features con iconos
 */
import SectionContainer from "@components/layout/SectionContainer.astro";

interface Feature {
  icon: string; // nombre del icono SVG
  title: string;
  description: string;
}

interface Props {
  title?: string;
  features: Feature[];
  class?: string;
}

const { title = "Beneficios", features, class: className } = Astro.props;

