---
import Layout from "@layouts/Layout.astro";
import HeroClipped from "@components/HeroClipped.astro";
import ContacSocialPils from "@components/ContacSocialPils.astro";
import MapEmbed from "@components/MapEmbed.astro";
import SectionContainer from "@components/SectionContainer.astro";
---

<Layout
  title="Contáctanos | Gym Trasciende"
  description="¿Tienes preguntas o necesitas más información? Contáctanos hoy mismo y nuestro equipo estará encantado de ayudarte a alcanzar tus objetivos de fitness."
>
  <!-- Hero de Contacto con efecto espejo -->
  <HeroClipped
    backgroundImage="linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.6)), url('/contacpage.jpg')"
    fixedBackground={true}
    minHeight="min-h-dvh"
  >
    <div class="mx-auto flex max-w-4xl flex-col items-center gap-8 text-center">
      <div class="rounded-xl bg-white/10 p-8 backdrop-blur-sm md:p-12">
        <h1
          class="text-secondary mb-4 text-4xl leading-tight font-bold md:mb-6 md:text-6xl lg:text-6xl"
        >
          Contáctanos
        </h1>

        <p class="max-w-2xl text-base leading-relaxed text-gray-100 md:text-lg">
          ¿Tienes preguntas o necesitas más información? Nuestro equipo estará
          encantado de ayudarte a alcanzar tus objetivos de fitness.
        </p>
        <ContacSocialPils />
      </div>
    </div>
  </HeroClipped>

  <!-- Sección de Ubicación -->
  <SectionContainer class="py-12 lg:py-16">
    <div class="mx-auto max-w-5xl">
      <h2
        class="text-secondary mb-4 text-center text-3xl font-bold md:text-4xl"
      >
        Encuéntranos
      </h2>
      <p class="text-secondary/80 mb-8 text-center text-base md:text-lg">
        Guillermo Prieto Sur 45, La Estación, 71510 Ocotlán de Morelos, Oax.
      </p>
      <MapEmbed height="400" class="shadow-lg" />
    </div>
  </SectionContainer>
</Layout>
