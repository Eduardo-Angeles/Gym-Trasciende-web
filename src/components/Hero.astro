<!-- Hero: pantalla completa con imagen de fondo -->
<section
  class="flex min-h-dvh flex-col justify-between bg-cover bg-center bg-no-repeat p-4 md:p-12 lg:p-16"
  style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7)), var(--background-image-hero-pattern);"
>
  <!-- Contenedor del contenido -->
  <div class="mx-auto flex w-full max-w-7xl grow items-center px-4 lg:px-8">
    <div>
      <!-- Subtítulo arriba del H1 -->
      <p
        class="text-primary mb-2 text-sm font-semibold tracking-wide uppercase md:mb-4 md:text-xl"
      >
        ¡Supera tus limintes!
      </p>

      <!-- Título principal -->
      <h1
        class="text-secondary mb-4 text-4xl leading-tight font-bold tracking-widest md:mb-6 md:text-6xl lg:text-8xl"
      >
        <span class="border-secondary inline-block border-b-4 pb-1">
          <img
            src="/t.svg"
            alt="T"
            class="inline-block h-[1em] w-auto translate-y-[0.1em]"
            style="vertical-align: baseline;"
          />RA</span
        >SCIENDE
      </h1>

      <!-- Descripción -->
      <p
        class="text-secondary mb-6 max-w-2xl text-base leading-relaxed md:mb-8 md:text-xl"
      >
        No solo somos un gimnasio; somos tu socio en la transformación. Juntos
        alcanzaremos tus objetivos.
      </p>

      <!-- Botón de contacto -->
      <a
        href="#contacto"
        class="bg-primary hover:bg-secondary inline-block rounded-lg px-5 py-2.5 text-sm font-bold text-black transition-all duration-300 hover:scale-105 md:px-8 md:py-4 md:text-lg"
      >
        Contáctanos
      </a>
    </div>
  </div>

  <!-- ContacSocial al final de la sección -->
  <div class="w-full"></div>
</section>
