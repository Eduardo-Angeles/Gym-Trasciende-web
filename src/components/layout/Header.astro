---
import Menuamburgesa from "@components/ui/Menuamburgesa.astro";
import Facebook from "@components/icons/Facebook.astro";
import Instagram from "@components/icons/Instagram.astro";
import Tiktok from "@components/icons/Tiktok.astro";
---

<header
  id="header-nav"
  class="text-secondary fixed top-0 z-50 flex w-full items-center justify-between px-8 py-4 font-bold"
>
  <div class="mx-auto flex w-full max-w-7xl items-center justify-between">
    <a href="/" class="transition-opacity hover:opacity-80">
      <img
        src="/logo2.svg"
        alt="Gym Trasciende Logo"
        class="h-10 w-auto md:h-12.5"
      />
    </a>

    <nav class="hidden items-center gap-6 md:flex">
      <a
        href="/nosotros"
        class="text-lg font-medium transition-opacity hover:opacity-80"
      >
        Nosotros
      </a>
      <a
        href="/servicios"
        class="text-lg font-medium transition-opacity hover:opacity-80"
      >
        Servicios
      </a>
      <a
        href="/reviews"
        class="text-lg font-medium transition-opacity hover:opacity-80"
      >
        Reviews
      </a>
      <a
        href="/links"
        class="text-lg font-medium transition-opacity hover:opacity-80"
      >
        Links
      </a>
    </nav>
    <div class="hidden items-center gap-3 md:flex">
      <a
        href="https://www.facebook.com/profile.php?id=61583792785523"
        target="_blank"
        rel="noopener noreferrer"
        class="border-primary flex h-10 w-10 items-center justify-center rounded-lg border-2 transition-all hover:scale-110 hover:shadow-lg"
      >
        <Facebook class="h-5 w-5 text-white" />
      </a>
      <a
        href="https://www.instagram.com/trasciendegym?igsh=MmJxaHRjM2w2cG1p"
        target="_blank"
        rel="noopener noreferrer"
        class="border-primary flex h-10 w-10 items-center justify-center rounded-lg border-2 transition-all hover:scale-110 hover:shadow-lg"
      >
        <Instagram class="h-5 w-5 text-white" />
      </a>
      <a
        href="https://www.tiktok.com/@trasciende.gym"
        target="_blank"
        rel="noopener noreferrer"
        class="border-primary flex h-10 w-10 items-center justify-center rounded-lg border-2 transition-all hover:scale-110 hover:shadow-lg"
      >
        <Tiktok class="h-5 w-5 text-white" />
      </a>
    </div>
    <Menuamburgesa />
  </div>
</header>

<style>
  #header-nav {
    animation: blur-header linear both;
    animation-timeline: scroll();
    animation-range: 0 500px;
  }

  @keyframes blur-header {
    to {
      box-shadow:
        0px 5px 50px -5px rgba(0, 0, 0, 0.3),
        0px 0px 0 1px rgba(0, 0, 0, 0.1);
      background: rgba(17, 24, 39, 0.9);
      backdrop-filter: blur(10px);
    }
  }
</style>
