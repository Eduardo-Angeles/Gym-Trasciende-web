---
/**
 * TeamSection - Sección del equipo de entrenadores
 * Muestra a los profesionales del gimnasio con sus especialidades
 */
import SectionContainer from "@components/layout/SectionContainer.astro";
import Subtitle from "@components/ui/Subtitle.astro";

interface TeamMember {
  name: string;
  role: string;
  specialty: string;
  image: string;
  description: string;
}

const team: TeamMember[] = [
  {
    name: "Carlos Hernández",
    role: "Director y Entrenador Principal",
    specialty: "Fuerza y Acondicionamiento",
    image: "/team/placeholder-1.webp", // Reemplaza con tus imágenes
    description: "Certificado NSCA-CPT con más de 10 años de experiencia transformando vidas.",
  },
  {
    name: "María González",
    role: "Instructora de Spinning",
    specialty: "Cardio y Resistencia",
    image: "/team/placeholder-2.webp",
    description: "Especialista en entrenamiento cardiovascular y clases grupales de alto rendimiento.",
  },
  {
    name: "Luis Ramírez",
    role: "Entrenador Personal",
    specialty: "Hipertrofia y Nutrición",
    image: "/team/placeholder-3.webp",
    description: "Experto en desarrollo muscular y planes nutricionales personalizados.",
  },
  {
    name: "Ana Torres",
    role: "Entrenadora Funcional",
    specialty: "Movilidad y Prevención",
    image: "/team/placeholder-4.webp",
    description: "Fisioterapeuta deportiva enfocada en prevención de lesiones y recuperación.",
  },
];
---

<SectionContainer class="py-16 md:py-20">
  <section itemscope itemtype="https://schema.org/Organization">
    <Subtitle>Nuestro Equipo Profesional</Subtitle>
  
    <p class="text-secondary mx-auto mb-12 max-w-3xl text-center text-lg leading-relaxed" itemprop="description">
      Contamos con un equipo de entrenadores certificados, apasionados y comprometidos con tu éxito. 
      Cada uno aporta su experiencia única para ayudarte a alcanzar tus metas.
    </p>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
      {team.map((member) => (
        <article class="group relative overflow-hidden rounded-2xl border border-white/10 bg-gray-900/50 backdrop-blur-sm transition-all duration-300 hover:scale-[1.02] hover:border-emerald-500/30 hover:bg-gray-900/70 hover:shadow-lg hover:shadow-emerald-500/10" itemscope itemtype="https://schema.org/Person">
          <!-- Imagen del entrenador -->
          <div class="aspect-square overflow-hidden">
            <div class="flex h-full w-full items-center justify-center bg-linear-to-br from-gray-800 to-gray-900">
              {/* Placeholder - Reemplaza con imágenes reales */}
              <div class="flex h-full w-full items-center justify-center bg-linear-to-br from-emerald-500/20 to-cyan-500/20">
                <svg 
                  class="h-24 w-24 text-white/30" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                  aria-label={`Foto de ${member.name}`}
                  role="img"
                >
                  <title>{member.name} - {member.role}</title>
                  <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </div>
            </div>
          </div>

          <!-- Información del entrenador -->
          <div class="p-5">
            <h3 class="mb-1 text-xl font-bold text-white" itemprop="name">{member.name}</h3>
            <p class="text-primary mb-2 text-sm font-semibold" itemprop="jobTitle">{member.role}</p>
          
          <div class="mb-3 flex items-center gap-2">
            <svg 
              class="text-primary h-4 w-4" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
              />
            </svg>
            <span class="text-xs font-medium text-emerald-400" itemprop="knowsAbout">{member.specialty}</span>
          </div>
          
          <p class="text-sm leading-relaxed text-gray-400" itemprop="description">
            {member.description}
          </p>
        </div>

        <!-- Borde animado en hover -->
        <div class="absolute inset-0 rounded-2xl opacity-0 transition-opacity duration-300 group-hover:opacity-100" 
             style="background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.1), transparent); pointer-events: none;">
        </div>
      </article>
    ))}
  </div>

    <!-- CTA para unirse al equipo -->
    <div class="mt-12 text-center">
      <div class="mx-auto max-w-2xl rounded-xl border border-emerald-500/20 bg-linear-to-r from-gray-900/50 to-gray-800/50 p-8 backdrop-blur-sm">
        <h3 class="mb-3 text-2xl font-bold text-white">¿Quieres formar parte del equipo?</h3>
        <p class="text-secondary mb-5 text-base">
          Siempre estamos buscando profesionales apasionados que compartan nuestra visión.
        </p>
        <a 
          href="#contacto"
          class="bg-primary hover:bg-secondary inline-flex items-center gap-2 rounded-lg px-6 py-3 font-bold text-black transition-all duration-300 hover:scale-105"
          aria-label="Envía tu currículum para unirte al equipo"
        >
          Envía tu CV
          <svg 
            class="h-5 w-5" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M13 7l5 5m0 0l-5 5m5-5H6"
            />
          </svg>
        </a>
      </div>
    </div>
  </section>
</SectionContainer>
