    <a
      href="/contactos"
      class="border-secondary/5 text-secondary hover:bg-primary/5 hover:text-primary border-b px-6 py-4 font-medium transition-all duration-200 hover:pl-7"
    >
      Conócenos
    </a>
    <a
      href="#tienda"
      class="border-secondary/5 text-secondary hover:bg-primary/5 hover:text-primary border-b px-6 py-4 font-medium transition-all duration-200 hover:pl-7"
    >
      Tienda
    </a>
    <a
      href="#reviews"
      class="border-secondary/5 text-secondary hover:bg-primary/5 hover:text-primary border-b px-6 py-4 font-medium transition-all duration-200 hover:pl-7"
    >
      Reviews
    </a>
    <a
      href="#contacto"
      class="from-primary to-accent hover:from-accent hover:to-primary bg-gradient-to-r px-6 py-4 font-semibold text-white transition-all duration-200 hover:pl-7"
    >
      Contáctanos
    </a>
  </nav>
</div>
