---
import ButtonAnimation from "../icons/ButtonAnimation.astro";
---

<div class="relative lg:hidden">
  <input type="checkbox" id="menu-toggle" class="peer hidden" />

  <label
    for="menu-toggle"
    class="hover:bg-secondary/5 relative z-20 block cursor-pointer rounded-lg p-2.5 transition-all duration-300 active:scale-95"
    aria-label="Abrir menú de navegación"
  >
    <div class="space-y-1.5">
      <span
        class="bg-secondary block h-0.5 w-7 origin-center rounded-full transition-all duration-300 peer-checked:translate-y-2 peer-checked:rotate-45"
      ></span>
      <span
        class="bg-secondary block h-0.5 w-7 rounded-full transition-all duration-300 peer-checked:scale-0 peer-checked:opacity-0"
      ></span>
      <span
        class="bg-secondary block h-0.5 w-7 origin-center rounded-full transition-all duration-300 peer-checked:-translate-y-2 peer-checked:-rotate-45"
      ></span>
    </div>
  </label>

  <nav
    class="border-secondary/10 absolute top-full right-0 z-10 mt-3 hidden w-56 flex-col overflow-hidden rounded-xl border bg-black shadow-xl backdrop-blur-sm transition-all duration-300 peer-checked:flex"
  >
    <a
      href="/nosotros"
      class="border-secondary/5 text-secondary hover:bg-primary/5 hover:text-primary border-b px-6 py-4 font-medium transition-all duration-200 hover:pl-7"
    >
      Nosotros
    </a>
    <a
      href="/servicios"
      class="border-secondary/5 text-secondary hover:bg-primary/5 hover:text-primary border-b px-6 py-4 font-medium transition-all duration-200 hover:pl-7"
    >
      Servicios
    </a>
    <a
      href="/reviews"
      class="border-secondary/5 text-secondary hover:bg-primary/5 hover:text-primary border-b px-6 py-4 font-medium transition-all duration-200 hover:pl-7"
    >
      Reviews
    </a>

    <a
      href="/contacto"
      role="button"
      aria-label="Ir a página de contacto"
      class="group text-primary hover:bg-primary/10 inline-flex items-center justify-center gap-2 rounded-lg px-5 py-2.5 font-bold transition-all duration-300 hover:scale-105 active:scale-95"
    >
      <span>¡Quiero entrenar!</span>
      <ButtonAnimation
        width={24}
        height={24}
        class="transition-transform group-hover:scale-110"
      />
    </a>
  </nav>
</div>
