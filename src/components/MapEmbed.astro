---
/**
 * MapEmbed - Componente de mapa embebido con Google Maps
 *
 * Muestra la ubicación del gimnasio en un mapa interactivo de Google Maps.
 * Optimizado para rendimiento con lazy loading y marcador permanente.
 */

interface Props {
  height?: string;
  class?: string;
}

const { height = "450", class: className } = Astro.props;

// Nombre y ubicación del gimnasio
const placeName = "TRASCIENDE GYM";
const placeLocation = "Ocotlán de Morelos, Oaxaca";

// URL del mapa usando el nombre del lugar (sin API key necesaria)
const mapUrl = `https://maps.google.com/maps?q=${encodeURIComponent(placeName + ", " + placeLocation)}&t=&z=17&ie=UTF8&iwloc=&output=embed`;
---

<div class:list={["w-full overflow-hidden rounded-lg", className]}>
  <iframe
    src={mapUrl}
    width="100%"
    height={height}
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title="Ubicación de Gym Trasciende - Ocotlán de Morelos, Oaxaca"
    class="w-full"></iframe>
</div>
